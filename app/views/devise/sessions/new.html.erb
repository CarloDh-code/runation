<h2 class="text-center mb-4">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-container mx-auto", style: "max-width: 400px;" }) do |f| %>
  <div class="form-group">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { class: "form-control", placeholder: "Email", autocomplete: "email" },
                label_html: { class: "form-label" } %>
  </div>

  <div class="form-group">
    <%= f.input :password,
                required: false,
                input_html: { class: "form-control", placeholder: "Password", autocomplete: "current-password" },
                label_html: { class: "form-label" } %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check mb-3">
      <%= f.input :remember_me,
                  as: :boolean,
                  label_html: { class: "form-check-label" },
                  input_html: { class: "form-check-input" } %>
    </div>
  <% end %>

  <div class="d-grid mb-3">
    <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<div class="text-center mt-3">
  <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-info text-white fw-bold btn-sm d-inline-block" %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-link btn-sm d-inline-block" %>

</div>
