<h2 class="text-center">Sign up to Runation</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'sign-up-form' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                placeholder: 'Enter your email',
                input_html: { class: 'input-field', autocomplete: "email" } %>

    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                placeholder: 'Create a password',
                input_html: { class: 'input-field', autocomplete: "new-password" } %>

    <%= f.input :password_confirmation,
                required: true,
                placeholder: 'Confirm your password',
                input_html: { class: 'input-field', autocomplete: "new-password" } %>

    <%= f.input :nickname,
                required: true,
                placeholder: 'Enter your nickname',
                input_html: { class: 'input-field', autocomplete: "nickname" } %>

    <%= f.input :photo, as: :file, input_html: { class: 'file-upload' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: 'submit-button' %>
  </div>
<% end %>

<div class="text-center mt-3">
  <%= link_to "Already have an account? Log in", new_session_path(resource_name), class: "btn btn-link btn-sm d-inline-block" %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-link btn-sm d-inline-block" %>
</div>
