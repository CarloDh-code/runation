<h2 class="text-center">Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'profile-form' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, placeholder: 'Your email', input_html: { class: 'input-field' } %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p class="confirmation-warning">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "Leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password", class: 'input-field' } %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password", class: 'input-field' } %>
    <%= f.input :current_password,
                hint: "We need your current password to confirm your changes",
                required: true,
                input_html: { autocomplete: "current-password", class: 'input-field' } %>
    <%= f.input :photo, as: :file, input_html: { class: 'file-upload' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update", class: 'submit-button' %>
  </div>
<% end %>


<div class="cancel-account">
<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'cancel-button' %>
</div>

<%= link_to "Back", :back, class: 'back-link' %>
