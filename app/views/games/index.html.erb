<% @games.each do |game| %>
<div class="card">
  <h2 class="namecard">
    <%= link_to game.name, game_path(game), class: "game-title-link" %>
  </h2>

  <div class="info">
    <p>Created by <strong><%= game.players.first.nickname %></strong></p>
    <p>📍 PARIS</p>
  </div>

  <div class="mapy">
    <div id="map" style="width: 100%; height: 300px;"
         data-controller="mappending"
         data-mappending-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

  <div class="status">
    <div class="infos">👤 <%= game.players.count %> / <%= game.nb_of_players %>   </div>
    <div class="infos">⏳ <%= game.duration %> DAYS</div>
    <div class="infos">🌍 15 KM²</div>
  </div>
</div>
<% end %>
