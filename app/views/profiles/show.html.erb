  <!-- Profile Section -->
  <div class="text-center mt-3 mb-4 pt-4">
    <div class="position-relative d-inline-block">
      <%= link_to edit_player_registration_path, class: 'position-absolute top-0 start-100' do %>
        <i class="fa-regular fa-pen-to-square"></i>
      <% end %>
      <div class="rounded-circle bg-primary">
          <% if current_player.photo.attached? %>
            <%= cl_image_tag(current_player.photo.key, class: "avatar-base", width: 100, height: 100) %>
          <% else %>
            <i class="fa-solid fa-user text-white fs-1 d-flex justify-content-center align-items-center" style="height: 100%;">
          <% end %>
        </i>
      </div>
      <%# <button class="btn btn-light position-absolute top-0 start-100 translate-middle p-0 rounded-circle border" id="profileButton" style="width: 25px; height: 25px;">
        <i class="fa-regular fa-pen-to-square"></i>
        <input type="file" class="form-control-file" id="photoUpload" accept="image/*" style="opacity: 0; position: absolute; top: 0; left: 0; width: 25px; height: 25px; cursor: pointer;">
      </button> %>



    </div>
    <h1 class="mt-3 fs-2 fw-bold">
    <%= @username %>
    </h1>
    <p class="text-muted"> <%= @usermail %> <br> <% @user_real_name %> </p>

  </div>

  <!-- Stats section -->
  <div class="stats-container">
    <div class="stat-box red">
      <p class="stat-value"><%= @games_played_count %></p>
      <p class="stat-label">Games played</p>
    </div>
    <div class="stat-box orange">
      <p class="stat-value"><%= @games_won_count %></p>
      <p class="stat-label">Games won</p>
    </div>
    <div class="stat-box black">
      <%= @player.surface_covered_in_km2 %>
      <p class="stat-label">KmÂ² Covered</p>
    </div>
    <div class="stat-box blue">
      <p class="stat-value"><%= Player.total_runs(@player.id) %></p>
      <p class="stat-label">Number of runs</p>
    </div>
  </div>
</div>
